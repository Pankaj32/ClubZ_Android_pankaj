<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView_Profile">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>


    <style name="TextView.Gray" parent="TextView">
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="TextView.Black" parent="TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.SingleLine.Gray" parent="TextView.Gray">
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/teko_semibold</item>
    </style>


    <style name="TextView.Header.Gray" parent="TextView.Header">
        <item name="android:textColor">@color/text_header_color</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/teko_medium</item>
    </style>

    <style name="TextAppearanceExpand" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/teko_semibold</item>
    </style>

    <style name="TextAppearanceHeader" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/teko_semibold</item>
    </style>


    <style name="tvStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/icon_tint</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorAccent">@color/hint_color</item>
        <item name="colorControlNormal">@color/icon_tint</item>
        <item name="colorControlActivated">@color/hint_color</item>
        <item name="colorControlHighlight">@color/icon_tint</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/text_color_gray</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/icon_tint</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText.ClubDetail" parent="EditText">
        <item name="android:enabled">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditText.ClubCreation" parent="EditText">
        <item name="android:enabled">true</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:focusable">true</item>-->
    </style>


    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>