<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="AppThmeLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>

    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme2" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- AppCompat Attributes -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/black</item>
        <item name="spinnerStyle">@style/MySpinner</item>
    </style>


    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@android:color/holo_red_light</item>
    </style>


    <!-- This helps the PopupMenu stick with Light theme while the ActionBar is in Dark theme -->
    <style name="YourActionBarWidget" parent="android:Theme.Holo.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
    </style>




    <style name="MySpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="tabtext" >
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <!-- <style name="NavigationTab" parent="Widget.Design.TabLayout">
         <item name="tabBackground">@drawable/background_tab</item>
         <item name="tabSelectedTextColor">@color/primary_light</item>
         <item name="tabIndicatorColor">@color/blue</item>
         <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
     </style>-->

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/teko_semibold</item>
    </style>

    <!-- For date and time picker-->
    <style name="DialogTheme2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="lightcolor" >
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="white_et" >
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="grayet" >
        <!-- Customize your theme here. -->
        <item name="colorAccent">#626262</item>
    </style>

    <!--<item name="android:windowBackground">@drawable/splash</item>-->


    <style name="text_indicator">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/teko_semibold</item>
        <item name="android:textColor">@color/unserline_color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/number_inactive</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:maxHeight">@dimen/_30sdp</item>
        <item name="android:maxWidth">@dimen/_30sdp</item>
        <item name="android:minWidth">@dimen/_30sdp</item>
    </style>

    <style name="et_sign_up">
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:theme">@style/lightcolor</item>
    </style>

    <style name="et_club_create">
        <item name="android:textColorHint">#626262</item>
        <item name="colorAccent">#626262</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:theme">@style/grayet</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_line_editext</item>
    </style>

    <style name="tv_club_detials">
        <item name="android:textColorHint">#626262</item>
        <item name="colorAccent">#626262</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:theme">@style/grayet</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="popstyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/bg_violet100</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="lighttheme" >
        <!-- Customize your theme here. -->
        <item name="android:theme">@style/lightcolor</item>
    </style>

    <style name="whitetheme" >
        <!-- Customize your theme here. -->
        <item name="android:theme">@style/white_et</item>
    </style>

    <style name="graytheme" >
        <!-- Customize your theme here. -->
        <item name="android:theme">@style/grayet</item>
    </style>



    <style name="SCBSwitch" parent="@style/Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="SCBSwitch2" parent="@style/Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#1D8B90</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#7CBCBF
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#7CBCBF
        </item>
    </style>


    <style name="pager_title">
        <item name="android:fontFamily">@font/teko_semibold</item>
        <item name="android:textSize">@dimen/_26sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_minus10sdp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="step_title">
        <item name="android:fontFamily">@font/teko_semibold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
    </style>

    <style name="pager_body">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="CropImage" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="NavigationView" parent="Base.Theme.AppCompat">>
        <item name="android:listDivider">@color/gray_transprent</item>
        <item name="android:textColorSecondary">@color/text_color_gray</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>
</resources>
