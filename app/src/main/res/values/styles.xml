<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppThemeh" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="lightcolor" >
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<item name="android:windowBackground">@drawable/splash</item>-->

    <style name="AppTheme2" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="text_indicator">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/teko_bold</item>
        <item name="android:textColor">@color/unserline_color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/number_inactive</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:maxHeight">@dimen/_30sdp</item>
        <item name="android:maxWidth">@dimen/_30sdp</item>
        <item name="android:minWidth">@dimen/_30sdp</item>
    </style>

    <style name="et_sign_up">
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:theme">@style/lightcolor</item>
    </style>

    <style name="popstyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/bg_violet100</item>
        <item name="android:itemBackground">@android:color/white</item>
    </style>

    <style name="lighttheme" >
        <!-- Customize your theme here. -->
        <item name="android:theme">@style/lightcolor</item>
    </style>


    <style name="pager_title">
        <item name="android:fontFamily">@font/teko_bold</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="step_title">
        <item name="android:fontFamily">@font/teko_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
    </style>

    <style name="pager_body">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="CropImage" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

</resources>
