<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_circle_blue"
                app:civ_border_color="@color/white"
                android:src="@drawable/user_place_holder"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_overlay="true"/>

            <ImageView
                android:id="@+id/ivFavroit"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_favorite_fill"
                android:background="@drawable/bg_circle_white_activity_feed"
                android:padding="@dimen/_3sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Header"
                android:textColor="@color/eighty_black"
                android:text="@string/dharmraj_acharya_bhurtel"/>

            <TextView
                android:id="@+id/tvClubname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNickname"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:text="@string/dharmraj_acharya_bhurtel"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/chatImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chat"
                android:tint="@color/icon_tint"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_3sdp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_60sdp"
        android:background="@color/gray_transprent"/>

</LinearLayout>