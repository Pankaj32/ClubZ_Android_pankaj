<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_search"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_magnifying_glass"
            android:layout_marginLeft="@dimen/_15sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_club_s"
            android:background="@null"
            android:textColorHint="@color/text_gray"/>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_10sdp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/image_club"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:siBorderColor="@color/text_gray"
                app:siBorderWidth="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:src="@drawable/bg_circle_primary"
                />

            <TextView
                android:id="@+id/club_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_16sdp"
                android:layout_toEndOf="@id/image_club"
                android:layout_toRightOf="@id/image_club"
                android:text="Sport Club"
                android:gravity="center_vertical"
                android:textColor="@color/primaryColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:text="@string/club_private"/>
            <TextView
                android:id="@+id/club_s"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@id/image_club"
                android:layout_toRightOf="@id/image_club"
                android:text="Philladelphia phillips"
                android:gravity="center_vertical"
                android:layout_below="@id/club_name"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/club_descip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_toEndOf="@id/image_club"
                android:layout_toRightOf="@id/image_club"
                android:text="This is just a dummy text to showola  aaldfa aldsfas fasdlfasfjasfa lajsdfs"
                android:gravity="center_vertical"
                android:layout_below="@id/club_s"
                android:textColor="@color/inactive_tab"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_toEndOf="@id/image_club"
                android:layout_toRightOf="@id/image_club"
                android:text="@string/admin_by"
                android:gravity="center_vertical"
                android:layout_below="@id/club_descip"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_toEndOf="@id/image_club"
                android:layout_toRightOf="@id/image_club"
                android:text="@string/admin_by"
                android:gravity="center_vertical"

                android:layout_below="@id/club_descip"
                android:textColor="@color/primaryColor"/>

            <TextView
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:minHeight="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:text="35 members"
                android:gravity="center_vertical"
                android:layout_below="@id/name"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:minHeight="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:text="35 members"
                android:gravity="center_vertical"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:paddingLeft="@dimen/_14sdp"
                android:paddingRight="@dimen/_14sdp"
                android:text="@string/req_join"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto_medium"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:layout_below="@id/name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>