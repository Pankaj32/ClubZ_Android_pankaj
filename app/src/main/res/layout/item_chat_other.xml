<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/userTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:text="Addition Smith"
        android:textColor="@color/primaryColor"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userTxt"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_45sdp"
        android:background="@drawable/chat_other_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:text="hellodgjfdgjfdgj"
            android:textColor="@color/black"
            android:visibility="visible"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/smlProgress"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/chat_imageview"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:fontFamily="@font/roboto_light"
            android:text="6.00pm"
            android:textColor="@color/nav_gray"
            android:textSize="8sp"
            android:visibility="visible" />
    </LinearLayout>


</RelativeLayout>