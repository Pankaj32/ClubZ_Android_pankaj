<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_white_internet">


    <View
        android:id="@+id/top_primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_white_internet_top"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_circle_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        app:srcCompat="@drawable/ic_gavel"
        android:padding="@dimen/_10sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:layout_below="@+id/top_primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/a_internet_title"
                android:layout_marginTop="@dimen/_65sdp"
                android:textSize="@dimen/_18sdp"
                android:lineSpacingExtra="@dimen/_minus10sdp"
                android:layout_margin="@dimen/_24sdp"
                android:gravity="center"
                android:fontFamily="@font/teko_semibold"/>

            <TextView
                android:id="@+id/mDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTitle"
                android:textColor="@color/text_color_gray"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_minus4sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="@string/a_internet_body"/>

            <View
                android:id="@+id/blank"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_below="@+id/mDesc"/>


            <TextView
                android:id="@+id/mClose"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_size"
                android:text="@string/close"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_below="@+id/blank"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textSize="@dimen/_13sdp"
                android:textAllCaps="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/primaryColor"
                android:gravity="center"
                android:padding="@dimen/_8sdp" />


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>