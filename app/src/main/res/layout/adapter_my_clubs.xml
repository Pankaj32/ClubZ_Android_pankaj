<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_club"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_circle_blue"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/teko_semibold"
                android:text="Phillipeldia Phillips"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/switch1"
                android:paddingRight="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_below="@+id/tvname">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_status"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:padding="@dimen/_2sdp"
                    app:tint="@color/black"
                    app:srcCompat="@drawable/ic_lock_outline"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/inactive_tab"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="@string/Private"/>

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_user_white"
                    app:tint="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/leadby"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/dharmraj_acharya_bhurtel"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>