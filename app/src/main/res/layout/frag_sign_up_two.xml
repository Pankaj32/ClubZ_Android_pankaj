<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/image_picker"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/add_profile"
            app:siBorderWidth="@dimen/_1sdp"
            app:siBorderColor="@color/white"
            android:padding="@dimen/_1sdp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_capture"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:tint="@color/white"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_photo_camera"
            android:background="@drawable/bg_camera_picker"
            android:layout_marginLeft="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_minus22sdp"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/to_start"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/unserline_color"
            android:fontFamily="@font/poppins_italic"/>
        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/unserline_color"/>

    </LinearLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lnr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:srcCompat="@drawable/ic_user"
                        android:tint="@color/text_gray"
                        android:padding="@dimen/_5sdp" />


                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="@string/first_name"
                        android:layout_margin="0dp"
                        style="@style/et_sign_up"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/pager_line"
                        android:layout_below="@+id/username"
                        android:layout_alignLeft="@id/username"
                        android:layout_alignRight="@+id/username"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:srcCompat="@drawable/ic_user"
                        android:tint="@color/text_gray"
                        android:padding="@dimen/_5sdp" />


                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:hint="@string/last_name"
                        android:layout_margin="0dp"
                        style="@style/et_sign_up"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/pager_line"
                        android:layout_below="@+id/lastname"
                        android:layout_alignLeft="@id/lastname"
                        android:layout_alignRight="@+id/lastname"/>


                </RelativeLayout>






            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/lnr_name"
                app:srcCompat="@drawable/ic_envelope"
                android:tint="@color/text_gray"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:hint="@string/email"
                style="@style/et_sign_up"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/lnr_name"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/pager_line"
                android:layout_below="@+id/email"
                android:layout_alignLeft="@id/email"
                android:layout_alignRight="@+id/email"/>

            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/bg_btn_green"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_below="@id/email"
                android:textColor="@color/text_btn"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/or_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="@string/orconnect"
                android:textColor="@color/text_gray"
                android:layout_margin="@dimen/_15sdp"
                android:layout_below="@+id/next"
                android:fontFamily="@font/poppins_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_below="@+id/or_login"
                android:layout_marginBottom="@dimen/_20sdp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="start">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/bg_google"
                        app:srcCompat="@drawable/ic_google"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="match_parent"
                        android:text="@string/google"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_google"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:fontFamily="@font/poppins_light"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="end">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:backgroundTint="@color/facebook"
                        android:background="@drawable/bg_facebook"
                        app:srcCompat="@drawable/ic_facebook"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="@string/facebook"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/bg_facebook"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </LinearLayout>




    </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>