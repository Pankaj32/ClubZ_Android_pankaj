<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_10sdp"
               android:elevation="@dimen/_3sdp">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:padding="@dimen/_10sdp">
                   <android.support.v7.widget.AppCompatImageView
                       android:id="@+id/image_club"
                       android:layout_width="@dimen/_35sdp"
                       android:layout_height="@dimen/_35sdp"
                       android:scaleType="fitCenter"
                       app:srcCompat="@drawable/ic_shield_outline"
                       android:padding="@dimen/_5sdp"
                       android:background="@drawable/bg_circle_blue"
                       android:layout_marginRight="@dimen/_10sdp"
                       android:layout_marginBottom="@dimen/_10sdp"/>

                   <TextView
                       android:id="@+id/tvname"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_18sdp"
                       android:fontFamily="@font/teko_semibold"
                       android:text="Phillipeldia Phillips"
                       android:layout_marginLeft="@dimen/_50sdp"
                       android:layout_marginStart="@dimen/_50sdp"
                       android:singleLine="true"
                       android:layout_toLeftOf="@+id/switch1"
                       android:paddingRight="@dimen/_10sdp"
                        />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_10sdp"
                       android:layout_marginTop="@dimen/_25sdp"
                       android:layout_marginLeft="@dimen/_50sdp">
                       <android.support.v7.widget.AppCompatImageView
                           android:layout_width="@dimen/_10sdp"
                           android:layout_height="@dimen/_10sdp"
                           app:srcCompat="@drawable/new_user_ico"/>
                       <TextView
                           android:id="@+id/members"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/inactive_tab"
                           android:textSize="@dimen/_8sdp"
                           android:paddingStart="@dimen/_3sdp"
                           android:text="1000 members"/>
                       <android.support.v7.widget.AppCompatImageView
                           android:id="@+id/img_status"
                           android:layout_width="@dimen/_10sdp"
                           android:layout_height="@dimen/_10sdp"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:scaleType="fitCenter"
                           app:srcCompat="@android:drawable/ic_lock_lock"/>
                       <TextView
                           android:id="@+id/status"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/inactive_tab"
                           android:textSize="@dimen/_8sdp"
                           android:paddingStart="@dimen/_3sdp"
                           android:text="Private"/>
                       <android.support.v7.widget.AppCompatImageView
                           android:layout_width="@dimen/_10sdp"
                           android:layout_height="@dimen/_10sdp"
                           android:layout_marginLeft="@dimen/_10sdp"
                           app:srcCompat="@drawable/lead_by_ico"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/inactive_tab"
                           android:textSize="@dimen/_8sdp"
                           android:paddingStart="@dimen/_3sdp"
                           android:text="Lead by"/>
                       <TextView
                           android:id="@+id/leadby"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textColor="@color/primaryColor"
                           android:textSize="@dimen/_8sdp"
                           android:paddingLeft="@dimen/_5sdp"
                           android:text=" Jhon Doe"/>


                   </LinearLayout>



                   <TextView
                       android:id="@+id/body_des"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_10sdp"
                       android:paddingStart="@dimen/_8sdp"
                       android:fontFamily="@font/roboto_regular"
                       android:text="This is dummy Text to show lotem ipsum adsl dasks its usesjfasjfkasjdfaslf djsfakjasdl asfajsfasjfklal jljjjjjjj"
                       android:layout_marginTop="@dimen/_44sdp"
                       />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_1sdp"
                       android:background="@color/pager_line"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:layout_below="@id/body_des"
                       />

                   <Button
                       android:id="@+id/btn_join"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/button_size"
                       android:paddingStart="@dimen/btn_pading_left"
                       android:paddingEnd="@dimen/btn_pading_right"
                       android:text="@string/join"
                       android:textAllCaps="true"
                       android:textSize="@dimen/_14sdp"
                       android:fontFamily="@font/roboto_regular"
                       android:background="@drawable/bg_btn_green"
                       android:layout_below="@id/body_des"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentRight="true"
                       android:layout_gravity="end"
                       android:layout_marginTop="@dimen/_20sdp"
                       />

                   <android.support.v7.widget.AppCompatImageView
                       android:layout_width="@dimen/_30sdp"
                       android:layout_height="@dimen/_30sdp"
                       app:srcCompat="@drawable/ic_place_black_24dp"
                       android:layout_alignTop="@id/btn_join"
                       android:padding="@dimen/_4sdp"/>

                   <TextView
                       android:id="@+id/distance"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/_30sdp"
                       android:textColor="@color/primaryColor"
                       android:textSize="@dimen/_12sdp"
                       android:paddingLeft="@dimen/_30sdp"
                       android:text="Km"
                       android:gravity="center_vertical"
                       android:layout_alignTop="@id/btn_join"/>


                   <Switch
                       android:id="@+id/switch1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentRight="true"
                       android:theme="@style/SCBSwitch" />

               </RelativeLayout>
           </android.support.v7.widget.CardView>



</RelativeLayout>