    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:id="@+id/cus_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/primaryColor"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_menu_black_24dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/t_stay_up"
            android:fontFamily="@font/teko_bold"
            android:textSize="@dimen/_18sdp"
            android:gravity="center_vertical"
            android:textColor="@color/white" />



        <RelativeLayout
            android:id="@+id/serch_box"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/search_back_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_search_black_24dp"/>

            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:theme="@style/whitetheme"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/cancel"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                app:srcCompat="@drawable/ic_plus_symbol"
                android:tint="@color/white"
                android:padding="@dimen/_7sdp"
                android:rotation="45"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            app:srcCompat="@drawable/ic_search_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/addsymbol"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_add_square_button"/>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bookmark"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            app:srcCompat="@drawable/ic_bookmark_border_black_24dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/bubble_menu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_3sdp"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"/>

    </LinearLayout>

