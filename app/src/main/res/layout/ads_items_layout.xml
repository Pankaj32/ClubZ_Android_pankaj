<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_9sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_1sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:elevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/longpress_selecter">

                <LinearLayout
                    android:id="@+id/nameLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/adType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Favourite"
                            android:textColor="@color/primaryColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/adTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toStartOf="@id/adType"
                            android:fontFamily="@font/teko_semibold"
                            android:singleLine="true"
                            android:text="fdgsdsdfsdf"
                            android:textColor="@color/eighty_black"
                            android:textSize="@dimen/_16sdp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/adValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="$ 50"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:id="@+id/iv_arrow_expand"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:padding="@dimen/_2sdp"
                            app:srcCompat="@drawable/ic_event_down_arrow" />

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_toStartOf="@id/iv_arrow_expand"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/inactive_heart_ico" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height=".9dp"
                android:background="@color/under_line"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/belloLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/adImg"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/new_app_icon" />

                <TextView
                    android:id="@+id/adTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="3 days ago"
                    android:textColor="@color/nav_gray"
                    android:textSize="12sp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImg"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/user_place_holder" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/userImg"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/teko_semibold"
                        android:text="@string/dharmraj_acharya_bhurtel"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/usrerole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:enabled="false"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/manager"
                        android:inputType="textCapSentences"
                        android:maxLength="38"
                        android:singleLine="true"
                        android:text="@string/manager"
                        android:textColor="@color/nav_gray"
                        android:textColorHint="@color/nav_gray"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
