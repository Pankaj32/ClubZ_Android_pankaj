<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/longpress_selecter">

                <LinearLayout
                    android:id="@+id/nameLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/adType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="sdfdfsdfsd"
                            android:textColor="@color/primaryColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/adTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_toStartOf="@id/adType"
                            android:fontFamily="@font/teko_semibold"
                            android:singleLine="true"
                            android:text="sdfsdfsdf"
                            android:textColor="@color/eighty_black"
                            android:textSize="16sp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/adValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:id="@+id/iv_arrow_expand"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_7sdp"
                            app:srcCompat="@drawable/ic_event_down_arrow"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_marginTop="3dp"
                            android:layout_toStartOf="@id/iv_arrow_expand"
                            android:padding="@dimen/_2sdp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_favorite_fill" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/lineView"
                android:layout_width="match_parent"
                android:layout_height=".9dp"
                android:background="@color/gray_transprent"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/belloLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/adImg"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/new_app_icon" />

                <TextView
                    android:id="@+id/adTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/nav_gray"
                    android:textSize="12sp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImg"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/user_place_holder" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/userImg"
                    android:orientation="vertical"
                    tools:ignore="RelativeOverlap">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/teko_semibold"
                        android:text="@string/dharmraj_acharya_bhurtel"
                        android:textColor="@color/primaryColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/usrerole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:enabled="false"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/advertiser"
                        android:inputType="textCapSentences"
                        android:maxLength="38"
                        android:singleLine="true"
                        android:text="@string/advertiser"
                        android:textColor="@color/nav_gray"
                        android:textColorHint="@color/nav_gray"
                        android:textSize="13sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
