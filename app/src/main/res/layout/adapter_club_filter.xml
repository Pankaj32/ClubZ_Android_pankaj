<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_club"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_circle_blue"
                android:scaleType="centerCrop"
                android:src="@drawable/new_img" />

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_toLeftOf="@+id/switch1"
                android:fontFamily="@font/teko_semibold"
                android:paddingRight="@dimen/_10sdp"
                android:singleLine="true"
                android:text="Phillipeldia Phillips"
                android:textColor="@color/eighty_black"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvname"
                android:layout_marginLeft="@dimen/_50sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_status"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_lock_outline"
                    app:tint="@color/eighty_black" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/Private"
                    android:textColor="@color/inactive_tab"
                    android:textSize="@dimen/_10sdp" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_user_white"
                    app:tint="@color/eighty_black" />

                <TextView
                    android:id="@+id/leadby"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_light"
                    android:maxLines="1"
                    android:text="@string/dharmraj_acharya_bhurtel"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:checked="true"
                android:theme="@style/SCBSwitch"
                android:visibility="visible" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>