<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <TextView
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_al_gps"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:layout_margin="@dimen/_24sdp"
        android:textSize="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/alert_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_gps_msg"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/_minus4sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:textSize="@dimen/_16sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        android:padding="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/disagree"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_size"
            android:text="No"
            android:textColor="@android:color/holo_blue_dark"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:paddingStart="@dimen/btn_pading_left"
            android:paddingEnd="@dimen/btn_pading_right"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_size"
            android:text="Yes"
            android:textColor="@android:color/holo_blue_dark"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:paddingStart="@dimen/btn_pading_left"
            android:paddingEnd="@dimen/btn_pading_right"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_16sdp"/>

    </LinearLayout>


</LinearLayout>