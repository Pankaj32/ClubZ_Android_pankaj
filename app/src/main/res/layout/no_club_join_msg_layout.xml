<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noFeedMsgUI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_16sdp"
        android:layout_below="@id/cus_status">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            app:srcCompat="@drawable/ic_zoe"
            android:scaleType="fitCenter"
            android:padding="@dimen/_8sdp"
            android:tint="@color/white"
            android:background="@drawable/bg_circle_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/teko_semibold"
            android:text="@string/no_content"
            android:layout_marginStart="@dimen/_61sdp" />

        <TextView
            android:id="@+id/body_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/no_content_body"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_61sdp" />

        <View
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@id/body_t" />
        <Button
            android:id="@+id/search_t"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:text="@string/search"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/bg_btn_green"
            android:layout_below="@id/body_t"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_24sdp"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>