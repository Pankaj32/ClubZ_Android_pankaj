<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:id="@+id/clRootView"
    tools:context=".ui.newsfeed.CreateNewsFeedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:background="@color/primaryColor">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/t_new_club"
            android:fontFamily="@font/teko_semibold"
            android:gravity="center_vertical"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivDone"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_check_white_24dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/titile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/graytheme"
                    android:fontFamily="@font/teko_semibold"
                    android:background="@null"
                    android:textColorHint="@color/ab_icon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:hint="@string/dharmraj_acharya_bhurtel"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:inputType="textCapSentences" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:background="@color/ab_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivComment"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:padding="@dimen/_3sdp"
                        app:srcCompat="@drawable/ic_comment_disable" />

                    <Spinner
                        android:id="@+id/spn_commentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/AppTheme.Light"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#626262"
                        android:prompt="@string/prompt_comment_disabled"
                        android:entries="@array/comment_type"/>

                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_newsFeed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_below="@id/image_icon"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_new_img"
                    android:background="#00A8D1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            app:srcCompat="@drawable/ic_filter" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none"
                                android:overScrollMode="never">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.clubz.ui.cv.chipview.TagView
                                        android:id="@+id/tagView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"/>

                                    <View
                                        android:id="@+id/tagDivider"
                                        android:layout_width="1dp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:background="@color/text_color_gray"
                                        android:visibility="gone"/>

                                    <EditText
                                        android:id="@+id/edFilterTag"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_26sdp"
                                        android:hint="@string/tab_to_add_filter_tags"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:textColorHint="@color/text_color_gray"
                                        android:textColor="@color/black"
                                        android:singleLine="true"
                                        android:inputType="textCapWords"
                                        android:maxLength="15"
                                        android:textSize="@dimen/_10sdp"
                                        android:fontFamily="@font/roboto_italic"
                                        android:imeOptions="actionDone"
                                        style="@style/et_sign_up"/>

                                </LinearLayout>

                            </HorizontalScrollView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@color/ab_icon"/>

                        </LinearLayout>


                    </LinearLayout>

                    <include layout="@layout/divider_start_view"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:text="@string/article_s_content"
                        android:fontFamily="@font/teko_semibold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <EditText
                            android:id="@+id/etv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/_100sdp"
                            android:textSize="@dimen/_12sdp"
                            android:background="@drawable/bg_edit_text"
                            android:hint="@string/hint_club_des"
                            android:textColorHint="#666666"
                            android:textColor="@color/black"
                            android:gravity="top"
                            android:inputType="textCapSentences|textMultiLine"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_16sdp"
                            style="@style/graytheme"
                            android:singleLine="false"
                            android:maxLength="200" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/resizer"
                            android:layout_alignBottom="@+id/etv_description"
                            android:layout_alignEnd="@+id/etv_description"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <View
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_gravity="right"
                            android:background="@color/text_gray"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/text_gray" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rtv_leadby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/image_member2"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            app:siBorderColor="@color/text_gray"
                            app:siBorderWidth="@dimen/_1sdp"
                            android:padding="@dimen/_8sdp"
                            android:background="@drawable/bg_circle_blue"
                            app:srcCompat="@drawable/ic_user_shape"
                            />

                        <TextView
                            android:id="@+id/leadby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/teko_light"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:text="@string/lead_by"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_alignTop="@id/image_member2"
                            android:layout_toRightOf="@id/image_member2"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/teko_semibold"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_alignTop="@id/leadby"
                            android:layout_toRightOf="@id/leadby"/>

                        <EditText
                            android:id="@+id/usrerole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:background="@null"
                            android:textColorHint="#666666"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:hint="@string/user_role"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_below="@+id/leadby"
                            android:inputType="textCapSentences"
                            android:maxLength="38"
                            android:singleLine="true"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                            android:layout_toRightOf="@id/image_member2"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#666666"
                            android:layout_below="@+id/usrerole"
                            android:layout_alignStart="@id/usrerole"
                            android:layout_alignEnd="@+id/usrerole"/>
                    </RelativeLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>