<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_menu0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/menu_iv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_24"
                    android:tint="@color/icon_tint"/>

                <TextView
                    android:id="@+id/menu_tv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:text="@string/create_new_club"
                    android:textColor="@color/icon_tint"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_24"
                    android:tint="@color/icon_tint"/>

                <TextView
                    android:id="@+id/menu_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:text="@string/create_new_club"
                    android:textColor="@color/icon_tint"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/menu_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_filter_list"
                    android:tint="@color/icon_tint"/>

                <TextView
                    android:id="@+id/menu_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:text="@string/filter_clubs"
                    android:textColor="@color/icon_tint"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>