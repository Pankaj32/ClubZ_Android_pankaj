<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_4sdp">

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadow_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/_4sdp"
        app:shadowRadius="@dimen/_1sdp"
        app:shadowMarginTop="1px"
        app:shadowMarginRight="1px"
        app:shadowMarginBottom="@dimen/_4sdp"
        app:shadowMarginLeft="1px"
        app:backgroundColor="@color/primaryColor"
        app:shadowColor="#999999">

    <!-- content -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:clickable="true"
        android:background="@drawable/bg_chip_view"
        android:backgroundTint="@color/primaryColor"
        android:orientation="horizontal">

        <!-- label -->
        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_2sdp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_12sdp" />

        <!-- remove button -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/delete_button"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_6sdp"
            android:visibility="visible"
            android:tint="@color/white"
            android:rotation="45"
            app:srcCompat="@drawable/ic_plus_symbol" />

    </LinearLayout>

    </com.loopeer.shadow.ShadowView>

</RelativeLayout>